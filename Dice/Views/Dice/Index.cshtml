@model Dice.Models.JugadoresModel
@{
    ViewBag.Title = "Index";
}

<div class="row">

    <div class="col-md-5">
        <div class="row">
            <h1>@Model.NombreJugador1</h1>
        </div>
        <div class="row">
            <h2><label id="resultado1"></label></h2>
        </div>
    </div>
    <div class="col-md-2">
        <div class="row">
            <input type="button" onclick="Jugar()" value="Jugar" />
        </div>
        <div class="row">
            <h2><label id="resultado"></label></h2>
        </div>

    </div>
    <div class="col-md-5">
        <div class="row">
            <h1>@Model.NombreJugador2</h1>
        </div>
        <div class="row">
            <h2><label id="resultado2"></label></h2>
        </div>
    </div>

</div>
<script src="http://code.jquery.com/jquery-1.9.1.js"></script>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/2.0.0/jquery.min.js"></script>


<script type="text/javascript">
    function Jugar() {

        var resultadoDadoUno = Math.round(Math.random() * 5 + 1);
        var resultadoDadoDos = Math.round(Math.random() * 5 + 1);

        document.getElementById('resultado1').innerHTML = resultadoDadoUno;
        document.getElementById('resultado2').innerHTML = resultadoDadoDos;
        var resultado = 'Empato';
        var resultadoInt = 0;

        if (resultadoDadoUno > resultadoDadoDos) {
            resultado = 'Gano 1';
            resultadoInt = 1;
        }
        if (resultadoDadoDos > resultadoDadoUno) {
            resultado = 'Gano 2';
            resultadoInt = 2;
        }
        document.getElementById('resultado').innerHTML = resultado;
        debugger;
        var serviceURL = '/Dice/PostResultado?resultado=' + resultadoInt;

        $.ajax({
            type: "GET",
            url: serviceURL,
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: successFunc,
            error: errorFunc
        });

        function successFunc(data, status) {
            
        }

        function errorFunc() {
            
        }
    }
</script>





